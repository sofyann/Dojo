@model Dojo.Models.SamuraiViewModel


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Samurai</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (ViewBag.Title.Equals("Edit"))
        {
            @Html.HiddenFor(model => model.Samurai.Id)
        }

        <div class="form-group">
            @Html.LabelFor(model => model.Samurai.Nom, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Samurai.Nom, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Samurai.Nom, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Samurai.Force, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Samurai.Force, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Samurai.Force, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.armeId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.armeId, Model.armes.Select(a => new SelectListItem() { Text = a.Nom, Value = a.Id.ToString() }), "Pas d'arme par défaut",new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.armeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (ViewBag.Title.Equals("Edit"))
                {
                    <input type="submit" value="Modifier" class="btn btn-default" />
                }
                else
                {
                    <input type="submit" value="Créer" class="btn btn-default" />
                }
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
